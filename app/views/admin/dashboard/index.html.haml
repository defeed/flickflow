    .panel.panel-primary
      .panel-heading
        %h3.panel-title
          = fa_icon('users')
          = link_to admin_users_path do
            %span.badge.pull-right 95
            Users
      .list-group
        = link_to '#', {class: 'list-group-item'} do
          %span.badge 18
          Online
        = link_to '#', {class: 'list-group-item'} do
