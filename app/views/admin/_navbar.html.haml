%nav.navbar.navbar-fixed-top.navbar-default{role: 'navigation'}
  .container-fluid
    .navbar-header
      %button.navbar-toggle{type: 'button', data: {target: '#ff-navbar-collapse', toggle: 'collapse'}}
        %span.sr-only Toggle navigation
        %span
          = fa_icon 'bars'
      = link_to 'flickflow', root_path, {class: 'navbar-brand visible-xs'}
    #ff-navbar-collapse.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li{class: "#{is_active? 'dashboard'}"}
          = link_to fa_icon('dashboard', text: 'Dashboard'), admin_root_path
        %li{class: "#{is_active? 'movies'}"}
          = link_to fa_icon('film', text: 'Movies'), admin_movies_path
        %li{class: "#{is_active? 'people'}"}
          = link_to fa_icon('users', text: 'People'), admin_people_path
        %li{class: "#{is_active? 'lists'}"}
          = link_to fa_icon('list', text: 'Lists'), admin_lists_path
        %li{class: "#{is_active? 'users'}"}
          = link_to fa_icon('users', text: 'Users'), admin_users_path
        %li
          = link_to fa_icon('tasks', text: 'Jobs'), admin_jobs_path
        %li
          = link_to fa_icon('wrench', text: 'Settings'), '#'
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          %a.dropdown-toggle.hidden-sm{href: '#', data: {toggle: 'dropdown'}}
            = fa_icon 'user', text: 'Herp Derp'
            %span.caret
          %a.dropdown-toggle.visible-sm{href: '#', data: {toggle: 'dropdown'}}
            = fa_icon 'user'
            %span.caret
          %ul.dropdown-menu{role: 'menu'}
            %li= link_to fa_icon('user', text: 'Profile'), '#'
            %li= link_to fa_icon('cog', text: 'Settings'), '#'
            %li.divider
            %li= link_to fa_icon('sign-out', text: 'Log out'), '#'
