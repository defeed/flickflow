- if @watched_movies.include?(movie.id)
  - thumbnail_class = 'poster-watched'
  - watched_class = 'btn-on'
- if @watchlist_movies.include?(movie.id)
  - thumbnail_class = 'poster-watchlist'
  - watchlist_class = 'btn-on'

.col-xs-4.col-sm-3.col-md-3.col-lg-2
  .thumbnail.thumbnail-poster{class: thumbnail_class, id: "thumbnail-poster-#{movie.id}"}
    = link_to movie_path(movie) do
      = poster_image_for movie, :md, alt: "#{movie.title} (#{movie.year})"
      .caption.hidden-xs
        %h2= movie.title
        - if movie.year
          %p= movie.year
        - if movie.genres
          %ul.list-inline
            - movie.genres.each do |genre|
              %li.small= genre.name
        = render partial: 'movies/list_toggler', locals: { movie: movie, options: { block_buttons: true } }
