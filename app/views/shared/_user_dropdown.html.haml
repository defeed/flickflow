- if current_user
  %ul.nav.navbar-nav.navbar-right
    %li.dropdown
      %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
        = fa_icon 'user'
        %span.hidden-sm= display_name_for current_user
        %span.caret
      %ul.dropdown-menu{role: 'menu'}
        %li= link_to fa_icon('user', text: 'Profile'), profile_path
        %li= link_to fa_icon('cog', text: 'Settings'), '#'
        %li.divider
        %li= link_to fa_icon('sign-out', text: 'Sign Out'), signout_path, method: :delete
